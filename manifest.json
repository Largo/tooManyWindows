{
    "manifest_version": 2,
    "name": "TooManyWindows",
    "version": "1.0",
    "description": "Warns when multiple windows are open and allows switching between them.",
    "permissions": ["tabs", "notifications"],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "smiley.svg",
        "48": "smiley.svg",
        "128": "smiley.svg"
      }
    },
    "icons": {
      "48": "smiley.svg",
      "128": "smiley.svg"
    }
  }
  